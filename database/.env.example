# ElderComp Database Environment Variables
# Copy this file to .env and update the values for your environment

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=eldercomp
DB_USER=postgres
DB_PASSWORD=password
DB_SCHEMA=eldercomp

# Connection Pool Settings
DB_MIN_CONNECTIONS=5
DB_MAX_CONNECTIONS=20

# Security
ENCRYPTION_KEY=eldercomp_encryption_key_change_in_production

# pgAdmin Configuration (for docker-compose)
PGADMIN_DEFAULT_EMAIL=admin@eldercomp.com
PGADMIN_DEFAULT_PASSWORD=admin

# PostgreSQL Configuration (for docker-compose)
POSTGRES_DB=eldercomp
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_HOST_AUTH_METHOD=trust
